@{
    ViewData["Title"] = "Index";
}

<div class="content-wrap ">
    <!-- Page title-->
    <div class="pt-120 pb-130">
        <div class="container">
           
            <div class="row gy-60 align-items-center">
                <div class="col-12 col-lg-6 ">

                    <div class="gallery-wrapper pe-lg-70" data-show="startbox">
                        <a class="gallery-item rounded-4 overflow-hidden"
                           href="assets/img/service-1-900x990.jpg" style="--img-height: 110%;"
                           data-img-height><img loading="lazy" src="assets/img/rektor.jpg" alt=""></a>


                    </div>
                </div>
                <div class="col-12 col-lg-6">
                    @foreach (var rektor in Model.Rektorlar)
                    {
                        <div class="summary">
                            <h3 class="mb-45" data-show="startbox">@rektor.Title</h3>
                            <p class="mb-60" data-show="startbox" data-show-delay="100">
                                @rektor.Content
                            </p>
                        </div>
                    }
                    <div class="row gy-40">
                        <!-- Item-->
                        @foreach (var rektor in Model.Rektorlar)
                        {
                            <div class="col-12 col-lg-6" data-show="startbox">
                                <ul class="list fw-medium font-size-15">
                                    <li class="active">@rektor.Position</li>
                                </ul>
                            </div>
                        }
                    </div>
                        <div class="mt-45" data-show="startbox">
                            <!-- Button--><a class="btn btn-accent-1 btn-link btn-clean"
                                             href="https://az.wikipedia.org/wiki/El%C3%A7in_Babayev" target="_self">
                                Learn
                                more
                            </a>
                        </div>
                    

                </div>

                </div>
            </div>
    </div>
</div>


