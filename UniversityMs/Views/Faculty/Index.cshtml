
@{
    ViewData["Title"] = "Index";
}

<div class="content-wrap ">
    <!-- Page title-->
    <div class="position-relative py-210">
        <div class="background">
            <div class="background-image jarallax" data-jarallax="" data-speed="0.8" style="z-index: 0;">
                <div id="jarallax-container-0"
                     style="position: absolute; top: 0px; left: 0px; width: 100%; height: 100%; overflow: hidden; z-index: -100; clip-path: polygon(0px 0px, 100% 0px, 100% 100%, 0px 100%);">
                    <img class="jarallax-img" loading="lazy" src="assets/img/facul.jpeg" alt=""
                         style="object-fit: cover; object-position: 50% 50%; max-width: none; position: absolute; top: 0px; left: 0px; width: 1223.33px; height: 410px; overflow: hidden; pointer-events: none; transform-style: preserve-3d; backface-visibility: hidden; will-change: transform, opacity; margin-top: -140px; transform: translate3d(0px, 214.8px, 0px);">
                </div>
            </div>
            <div class="background-color" style="--background-color: #000; opacity: .25;"></div>
        </div>
    </div><!-- Portfolio section-->
    <div class="faculty" style="padding: 30px;">
        <div class="col-lg-4 offset-lg-4 text-center">
            <h2 class="m-0" data-show="startbox" data-show-delay="100">
                Fakultələr
            </h2>
        </div>
        <div class="py-130 footerPrev" style="padding-bottom: 381.75px !important;">
            <div class="container">
                <!-- Isotope-->
                <div class="isotope">
                    <div class="row isotope-grid gy-60" style="position: relative; height: 1858.83px;">
                        @foreach (var faculty in Model.Faculty)
                        {
                            <div class=" isotope-item col-12" data-filters="architecture"
                                 style="position: absolute; left: 0px; top: 0px;">
                                <!-- Portfolio-->
                                <div class="card card-portfolio  card-hover-zoom card-horizontal">
                                    <a class="card-img  overflow-hidden" href="project-single-01.html"
                                       data-img-height="" style="--img-height: 86%;">
                                        <span class="badge bg-dark text-white position-absolute top-0 start-0 z-index-1 mt-20 ms-20">Architecture</span><img loading="lazy" src="assets/img/@faculty.Image" alt="">
                                    </a>
                                    <div class="card-body">
                                        <a class="card-title h3"
                                           href="mexanika-riy.html">@faculty.Name</a>
                                        <p class="card-text">
                                            @faculty.Desc
                                        </p>
                                        <!-- Button--><a class="btn btn-accent-1 btn-link btn-clean"
                                                         asp-controller="Department" asp-action="Index" target="_self">Learn more</a>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>


