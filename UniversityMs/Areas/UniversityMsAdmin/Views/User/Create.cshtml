@using UniversityMs.ViewModels.UserViewModel;
@model CreateUserViewModel

@{
    ViewData["Title"] = "Create";
}
<div class="row" style="margin:80px;">
    <div class="col-md-6 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">+Add User</h4>
                <form class="forms-sample" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label asp-for="FirstName">First Name </label>
                        <div class="input-group col-xs-12">
                            <input asp-for="FirstName" class="form-control file-upload-info" placeholder="First Name">
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="LastName">Last Name</label>
                        <input class="form-control" asp-for="LastName" placeholder="Last Name">
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password">Password</label>
                        <input class="form-control" asp-for="Password" placeholder="Password">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ConfirmPassword">Confirm Password</label>
                        <input class="form-control" asp-for="ConfirmPassword" placeholder="Confirm Password">
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Email">Email</label>
                        <input class="form-control" asp-for="Email" placeholder="Email">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Adress">Adress</label>
                        <input class="form-control" asp-for="Adress" placeholder="Adress">
                        <span asp-validation-for="Adress" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                               <label asp-for="PhoneNum">Phone Number</label>
                        <input class="form-control" asp-for="PhoneNum" placeholder="Phone Number">
                        <span asp-validation-for="PhoneNum" class="text-danger"></span>
                    </div>  
                    <button type="submit" value="Create" class="btn btn-primary">+Add</button>
                    <a class="btn btn-light" asp-action="Index">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>
