@model IEnumerable<Graduate>
@{
    ViewData["Title"] = "Index";
    int count = 1;
}

<div class="box-body" style="margin:80px;">
    <a type="submit" asp-action="Create" class="btn btn-primary" style="margin-bottom:10px;">+Add Graduate</a>
    <div class="table-responsive mb-0">
        <table class="table no-border" style="color: rgb(165, 63, 255);">
            <thead>
                <tr class="text-uppercase bg-lightest">
                    <th style="min-width: 50px">
                        #
                    </th>
                    <th style="min-width: 250px">
                        <span>Image</span>
                    </th>
                    <th style="min-width: 170px">
                        <span>Title</span>
                    </th>
                    <th style="min-width: 170px">
                        <span>Description</span>
                    </th><th style="min-width: 170px">
                        <span>Content</span>
                    </th><th style="min-width: 170px">
                         <span>Number of graduates</span>
                    </th>
                    <th style="min-width: 170px">
                        <span>Setttings</span>
                    </th>
                    <th style="min-width: 120px"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var grad in Model)
                {
                    <tr>
                        <td>

                            <span class=" fw-600 d-block fs-16" style="color: rgb(165, 63, 255);">
                                @count
                            </span>
                        </td>
                        <td>

                            <span class="text-dark fw-600 d-block fs-16">
                                <img src="~/assets/img/@grad.Image" />
                            </span>
                        </td>
                        <td>
                            <span class="text-dark fw-600 d-block fs-16">
                                @grad.Title
                            </span>
                        </td>
                        <td>
                            <span class="text-dark fw-600 d-block fs-16">
                                @grad.Desctrip
                            </span>
                        </td><td>
                            <span class="text-dark fw-600 d-block fs-16">
                                @grad.Content
                            </span>
                        </td><td>
                            <span class="text-dark fw-600 d-block fs-16">
                                @grad.Number
                            </span>
                        </td>
                        <td>
                            <a class="btn btn-warning" asp-action="Update" asp-route-id="@grad.Id">Update</a>
                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@grad.Id">Delete</a>
                        </td>
                    </tr>
                    count++;
                }
            </tbody>
        </table>
    </div>
</div>