@model UniversityMs.Models.Slide

@{
    ViewData["Title"] = "Create";
}
<div class="row" style="margin:80px;">
    <div class="col-md-6 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">+Add New Slider</h4>
                <form class="forms-sample" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label asp-for="Photo">Slide Image</label>
                        <div class="input-group col-xs-12">
                            <input asp-for="Photo" class="form-control file-upload-info" placeholder="Upload Image">
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Imagetitle">Slide Title</label>
                        <input class="form-control" asp-for="Imagetitle" placeholder="Image Title">
                        <span asp-validation-for="Imagetitle" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ImgDesctrip">Slide Description</label>
                        <input class="form-control" asp-for="ImgDesctrip" placeholder="Image Desctription">
                        <span asp-validation-for="ImgDesctrip" class="text-danger"></span>
                    </div>
                    <button type="submit" value="Create" class="btn btn-primary">+Add</button>
                    <a class="btn btn-light" asp-action="Index">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>
