@model IEnumerable<UniversityMs.Models.Partner>
@{
    ViewData["Title"] = "Index";
    int count = 1;
}
<div class="box-body" style="margin:80px;">
    <a type="submit" asp-action="Create" class="btn btn-primary" style="margin-bottom:10px;">+Add Partner</a>
    <div class="table-responsive mb-0">
        <table class="table no-border" style="color: rgb(165, 63, 255);">
            <thead>
                <tr class="text-uppercase bg-lightest">
                    <th style="min-width: 50px">
                        #
                    </th>
                    <th style="min-width: 170px">
                        <span>Title</span>
                    </th>
                    <th style="min-width: 170px">
                        <span>Svg Icon</span>
                    </th>
                    <th style="min-width: 170px">
                        <span>Setttings</span>
                    </th>
                    <th style="min-width: 120px"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var part in Model)
                {
                <tr>
                    <td>
                        @count
                    </td>
                    <td>
                        <span class="text-dark fw-600 d-block fs-16">
                            @part.Title
                        </span>
                    </td>
                    <td>
                        <span class="text-dark fw-600 d-block fs-16">
                            @part.SvgIcon
                        </span>
                    </td>
                    <td>
                        <a class="btn btn-warning" asp-action="Edit" asp-route-id="@part.Id">Update</a>
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@part.Id">Delete</a>
                    </td>
                </tr>
                    count++;
                }
            </tbody>
        </table>
    </div>
</div>
