@model IEnumerable<Course>
@{
    ViewData["Title"] = "Index";
    int count = 1;
}

<div class="box-body" style="margin:80px;">
    <a type="submit" asp-action="Create" class="btn btn-primary" style="margin-bottom:10px;">+Add Department</a>
    <div class="table-responsive mb-0">
        <table class="table no-border" style="color: rgb(165, 63, 255);">
            <thead>
                <tr class="text-uppercase bg-lightest">
                    <th style="min-width: 250px">
                        #
                    </th>
                    <th style="min-width: 50px">
                        <span>Name</span>
                    </th>
                    <th style="min-width: 170px">
                        <span>Credits</span>
                    </th>
                    <th style="min-width: 120px"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var course in Model)
                {
                    <tr>
                       
                        <td>
                            <span class="text-dark fw-600 d-block fs-16">
                                @count
                            </span>
                        </td>
                        <td>
                            <a class="text-dark fw-600 d-block fs-16">
                                @course.Name
                            </a>
                        </td>
                        <td>
                            <span class="text-dark fw-600 d-block fs-16">
                                @course.Credits
                            </span>
                        </td>
                        <td>
                            <a class="btn btn-warning" asp-action="Edit" asp-route-id="@course.Id">Update</a>
                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@course.Id">Delete</a>
                        </td>
                    </tr>
                    count++;
                }
            </tbody>
        </table>
    </div>
</div>
