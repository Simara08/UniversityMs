@using UniversityMs.ViewModels;
@model CourseVM;
@{
    ViewData["Title"] = "Index";
}

<div class="nk-content ">
    <div class="container-fluid">
        <div class="nk-content-inner">
            <div class="nk-content-body">
                <div class="nk-block-head nk-block-head-sm">
                    <div class="nk-block-between">
                        <div class="nk-block-head-content">
                            <h3 class="nk-block-title page-title">Course Category</h3>
                        </div>
                      
                    </div>
                </div>
                <div class="nk-block">
                    <div class="row g-gs">
                        @foreach (var course in Model.Course)
                        {
                            <div class="col-sm-6 col-lg-4 col-xxl-3">
                                <div class="card ">
                                    <div class="card-inner">
                                        <div class="d-flex justify-content-between align-items-start mb-3">
                                            <a  asp-controller="StudentQuiz" asp-action="Index"
                                               class="d-flex align-items-center">
                                                <div class="ms-3">
                                                    <h6 class="title mb-1">@course.Name</h6>
                                                    <span class="sub-text">Kredit:@course.Credits</span>
                                                    @foreach (var item in course.CourseDep)
                                                    {
                                                        <span class="sub-text">Kafedra:@item.Department?.Name</span>

                                                    }
                                                </div>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

