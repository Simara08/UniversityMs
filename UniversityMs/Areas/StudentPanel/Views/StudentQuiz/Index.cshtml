@using UniversityMs.ViewModels
@model CourseVM
@{
    ViewData["Title"] = "Index";
    int count = 1;
}

<div class="box-body" style="margin:80px;">
    <a type="submit" asp-action="Create" class="btn btn-primary" style="margin-bottom:10px;">+Add Seminar</a>
    <div class="table-responsive mb-0">
        <table class="table no-border" style="color: rgb(165, 63, 255);">
            <thead>
                <tr class="text-uppercase bg-lightest">
                    <th style="min-width: 50px">
                        #
                    </th>
                    <th style="min-width: 50px">
                        Student
                    </th>
                    <th style="min-width: 170px">
                        <span>Quiz </span>
                    </th>
                    <th style="min-width: 170px">
                        <span>Exam </span>
                    </th>
                    <th style="min-width: 170px">
                        <span>Research Project</span>
                    </th>
                    <th style="min-width: 170px">
                        <span>Research Topic</span>
                    </th>
                    <th style="min-width: 120px"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var course in Model.Course)
                {
                <tr>
                    <td>
                        @count
                    </td>
                    <td>
                        @foreach (var item in course.CourseSturucture.SectionCourseStruc)
                        {
                            @foreach (var temp in item.UserSectionCourseStruc)
                            {
                                <span class="text-dark fw-600 d-block fs-16">
                                    @temp.User.FirstName+@temp.User.LastName
                                </span>
                                }
                            }
                        </td>
                    <td>
                        @foreach (var item in course.CourseSturucture.SectionCourseStruc)
                        {
                            @foreach (var temp in item.CourseQuiz)
                            {
                                <span class="text-dark fw-600 d-block fs-16">
                                    @temp.Quiz.Mark
                                </span>
                            }

                        }
                    </td>
                    <td>
                        @foreach (var item in course.CourseSturucture.SectionCourseStruc)
                        {
                            @foreach (var temp in item.ExamCourseStruc)
                            {
                                <span class="text-dark fw-600 d-block fs-16">
                                    @temp.Exam.Mark
                                </span>
                            }
                        }
                    </td>
                    <td>

                        <span class="text-dark fw-600 d-block fs-16">

                        </span>
                    </td>
                    <td>
                        <span class="text-dark fw-600 d-block fs-16">

                        </span>
                    </td>
                </tr>
                    count++;
                }
            </tbody>
        </table>
    </div>
</div>

